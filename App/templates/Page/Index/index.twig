{% extends '/Layout/base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="mt-3">
        <h1>Welcome {{ app.user.username }} to your rss feed</h1>
    </div>
    <table class="table">
        <tr>
            <td>Account Created on</td>
            <td>{{ app.user.userInfo.createdAt|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>{{ app.user.userInfo.name }}</td>
        </tr>
    </table>
    <div class="form-group">
        <a  class="btn btn-outline-dark" href="{{ path('user_logout') }}">Logout</a>
    </div>
    <ul class="topics">
        {% for topic in news.topics %}
            <li class="btn btn-outline-dark">{{ topic.name }}({{ topic.count }})</li>
        {% endfor %}
    </ul>
    <ul>
        {% for feedItem in news.feed %}
            <li>{{ feedItem.title }}</li>
        {% endfor %}
    </ul>

{% endblock %}
